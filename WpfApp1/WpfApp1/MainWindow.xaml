<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:vm="clr-namespace:WpfApp1.ViewModels"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:NavigationVM/>
    </Window.DataContext>
    
   

    <Grid>
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <StackPanel>
                <Button Content="Home" Command="{Binding ShowHomeViewCommand}" Width="Auto" Height="50"></Button>
            <Button Command="{Binding ShowCreateTestViewCommand}" 
                Width="Auto" Height="50" 
                Content="Create" 
                
                 />

        <Button Command="{Binding ShowTakeTestViewCommand}" 
                Width="Auto" Height="50" 
                Content="Take" 
                 />
        </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <ContentControl Content="{Binding UserControl}"/>
        </Grid>
    </Grid>
</Window>